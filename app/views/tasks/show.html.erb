<p id="notice"><%= notice %></p>

<h2 class="task_title"><%= @task.title %></h2>
<p class="task_sub_title"><%= @task.description
%> </p>

<div id="task_items_wrapper">
	<%= render @task.task_items %>
	<div id="form">
	<%= render 'task_items/form' %>
	</div>
</div>

<div class="links">
	<%= link_to 'Edit',edit_task_path %> |
		<%= link_to 'Delete',task_path(@task), method: :delete, data: {confirm: 'Are you sure?'} %> |	
	<%= link_to 'Back',root_path %>
</div>
