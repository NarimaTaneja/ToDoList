<div class="row clearfix">
	<% if task_item.complete? %>
	<div class="complete">
		<%= link_to "Mark as Complete",completed_task_task_item_path(@task, task_item.id), method: :patch %>
	</div>
	<div class="task_item">
		<p style="opacity: 0.4;"><strike><%= task_item.content %></strike></p>
	</div>
	<div class="trash">
		<%= link_to "Delete",task_task_item_path(@task, task_item.id), method: :delete, data: {confirm: 'Are you sure?'} %> 
	</div>
	<% else %>
	<div class="complete">
		<%= link_to "Mark as complete",completed_task_task_item_path(@task, task_item.id), method: :patch %>
	</div>
	<div class="task_item">
		<p><%= task_item.content %></p>
	</div>
	<div class="trash">
		<%= link_to "Delete",task_task_item_path(@task, task_item.id), method: :delete, data: {confirm: 'Are you sure?'} %> 
	</div>
  <% end %>
</div>





